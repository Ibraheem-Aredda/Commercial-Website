<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Local references -->
        <link rel="stylesheet" href="../css/main-style.css" />
        <!-- Bootsrap references -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
        <script type='module' src='../js/eventHandler.js'></script>
        {# Other CSS References #}
        {% block stylesheets %}{% endblock %}
    </head>
    <body class='container'>
        {# Header Section #}
        {% include('components/header.html.twig') %}
        {# Highlights Section #}
        <div class="row highlights bg-main-gradient p-4">
            {# Essential Part #}
            <div class="col-lg pr-4">
                <h1 class="text-white">{% block highlights_name %}The Name Of The Page{% endblock %}</h1>
                <p class="text-main-light">{% block highlights_desc %}The Description Of The Page{% endblock %}</p>
            </div>
            {# Optional Part #}
            {% block highlights_slider %}{% endblock %}
        </div>
        <!-- The Sign-in modal -->
        <div id="modal-sign-in" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-main-gradient text-white">
                        <h5 class="modal-title">Sign in to continue:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body bg-main-light py-4 px-5">
                        <form class="m-0 modal-sign-in">
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="email" name='email' class="form-control" placeholder="Email">
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-4 text-main-dark col-form-label">Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name='password' class="form-control" placeholder="Password">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer p-2">
                        <button type="button" data-toggle="modal" data-target="#modal-sign-up" data-dismiss="modal"
                            class="btn btn-sm btn-secondary">You don't have an account? Sign up
                            now!</button>
                        <button type="button" class="btn btn-sm btn-success btn-signin">Sign in</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- The Sign-up modal -->
        <div class="modal fade" id="modal-sign-up" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-main-gradient text-white">
                        <h5 class="modal-title">Sign up to continue:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body bg-main-light py-4 px-5">
                        <form method='post' enctype='multipart/form-data' class="m-0 modal-sign-up">
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">First name</label>
                                <div class="col-sm-8">
                                    <input type="text" name='firstName' class="form-control" placeholder="First name">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">Last name</label>
                                <div class="col-sm-8">
                                    <input type="text" name='lastName' class="form-control" placeholder="Last name">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="email" name='email' class="form-control" placeholder="Email">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">Choose a photo</label>
                                <div class="col-sm-8">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name='photo' aria-describedby="inputGroupFileAddon01">
                                        <label class="custom-file-label">Choose file</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label class="col-sm-4 text-main-dark col-form-label">Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name='password' class="form-control" placeholder="Password">
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-4 text-main-dark col-form-label">Confirm Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer p-2">
                        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-sm btn-success btn-signup">Sign up</button>
                    </div>
                </div>
            </div>
        </div>
        {# Loader #}
        <div class='loader shadow'></div>
        {# Alert Modal #}
        <div class="modal fade" id="modal-alert" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-main-gradient text-white">
                        <h5 class="modal-title" id="modal-alert-title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id='modal-alert-message'></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {# Message Toast #}
        <div class="toast position-absolute ml-4 mt-4" style='top: 0; left: 0; z-index: 1100' role="alert">
            <div class="toast-header bg-main-gradient text-white">
                <strong class="mr-auto toast-title">Bootstrap</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">See? Just like this.</div>
        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
